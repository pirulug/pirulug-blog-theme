include ../config/config
block config

doctype html
html(lang='en')

  head

    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')

    title #{pageName} | #{siteName}

    // Favicon
    link(rel='apple-touch-icon' sizes='180x180' href='img/favicon/apple-touch-icon.png')
    link(rel='icon' type='image/png' sizes='32x32' href='img/favicon/favicon-32x32.png')
    link(rel='icon' type='image/png' sizes='16x16' href='img/favicon/favicon-16x16.png')
    link(rel='manifest' href='img/favicon/site.webmanifest')

    // Google Font
    link(rel='preconnect' href='https://fonts.googleapis.com')
    link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
    link(href='https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;600;700&family=Nunito:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;0,1000;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900;1,1000&display=swap' rel='stylesheet')


    // Core theme CSS (includes Bootstrap)
    link(href='css/app.css', rel='stylesheet')

  body

    header.container.my-4
      .row.align-items-center
        .col-3
          .d-lg-none
            button.btn.btn-primary(type='button', data-bs-toggle='collapse', data-bs-target='#navbar-main', aria-controls='navbar-main', aria-expanded='false', aria-label='Toggle navigation')
              i.fa.fa-bars
          .d-lg-inline-block.d-none
            button.btn.btn-facebook.me-1
              i.fa.fa-facebook
            button.btn.btn-twitter.me-1
              i.fa.fa-twitter
            button.btn.btn-instagram.me-1
              i.fa.fa-instagram
            button.btn.btn-youtube.me-1
              i.fa.fa-youtube
        .col-6
          h1.text-center #{siteName}
        .col-3.d-flex.justify-content-end
          svg(xmlns='http://www.w3.org/2000/svg' style='display: none;')
            symbol#circle-half(viewbox='0 0 16 16')
              path(d='M8 15A7 7 0 1 0 8 1v14zm0 1A8 8 0 1 1 8 0a8 8 0 0 1 0 16z')
            symbol#moon-stars-fill(viewbox='0 0 16 16')
              path(d='M6 .278a.768.768 0 0 1 .08.858 7.208 7.208 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277.527 0 1.04-.055 1.533-.16a.787.787 0 0 1 .81.316.733.733 0 0 1-.031.893A8.349 8.349 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.752.752 0 0 1 6 .278z')
              path(d='M10.794 3.148a.217.217 0 0 1 .412 0l.387 1.162c.173.518.579.924 1.097 1.097l1.162.387a.217.217 0 0 1 0 .412l-1.162.387a1.734 1.734 0 0 0-1.097 1.097l-.387 1.162a.217.217 0 0 1-.412 0l-.387-1.162A1.734 1.734 0 0 0 9.31 6.593l-1.162-.387a.217.217 0 0 1 0-.412l1.162-.387a1.734 1.734 0 0 0 1.097-1.097l.387-1.162zM13.863.099a.145.145 0 0 1 .274 0l.258.774c.115.346.386.617.732.732l.774.258a.145.145 0 0 1 0 .274l-.774.258a1.156 1.156 0 0 0-.732.732l-.258.774a.145.145 0 0 1-.274 0l-.258-.774a1.156 1.156 0 0 0-.732-.732l-.774-.258a.145.145 0 0 1 0-.274l.774-.258c.346-.115.617-.386.732-.732L13.863.1z')
            symbol#sun-fill(viewbox='0 0 16 16')
              path(d='M8 12a4 4 0 1 0 0-8 4 4 0 0 0 0 8zM8 0a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 0zm0 13a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 13zm8-5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2a.5.5 0 0 1 .5.5zM3 8a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2A.5.5 0 0 1 3 8zm10.657-5.657a.5.5 0 0 1 0 .707l-1.414 1.415a.5.5 0 1 1-.707-.708l1.414-1.414a.5.5 0 0 1 .707 0zm-9.193 9.193a.5.5 0 0 1 0 .707L3.05 13.657a.5.5 0 0 1-.707-.707l1.414-1.414a.5.5 0 0 1 .707 0zm9.193 2.121a.5.5 0 0 1-.707 0l-1.414-1.414a.5.5 0 0 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .707zM4.464 4.465a.5.5 0 0 1-.707 0L2.343 3.05a.5.5 0 1 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .708z')
              symbol#check2(viewbox='0 0 16 16')
                path(d='M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z')

          button#bd-theme.btn.btn-primary.dropdown-toggle.d-flex.align-items-center(type='button' data-bs-toggle='dropdown' aria-expanded='false')
            svg.bi.my-1.theme-icon-active
              use(href='#circle-half')
            //- span.d-lg-none.ms-2 Toggle theme
          ul.dropdown-menu.dropdown-menu-end
            li
              button.dropdown-item.d-flex.align-items-center(type='button' data-bs-theme-value='light')
                svg.bi.me-2.opacity-50.theme-icon
                  use(href='#sun-fill')
                | Light
                svg.bi.ms-auto.d-none
                  use(href='#check2')
            li
              button.dropdown-item.d-flex.align-items-center(type='button' data-bs-theme-value='dark')
                svg.bi.me-2.opacity-50.theme-icon
                  use(href='#moon-stars-fill')
                | Dark
                svg.bi.ms-auto.d-none
                  use(href='#check2')
            li
              button.dropdown-item.d-flex.align-items-center(type='button' data-bs-theme-value='auto')
                svg.bi.me-2.opacity-50.theme-icon
                  use(href='#circle-half')
                | Auto
                svg.bi.ms-auto.d-none
                  use(href='#check2')


    include ../includes/blog-nav

    //- .mt-4
    block header

    // Page content
    .container.mt-4
      .row

        // Blog entries
        .col-lg-8
          block content

        // Side widgets
        .col-lg-4
          block aside
          
    include ../includes/blog-footer

    // Core theme JS
    script(src='js/app.js')