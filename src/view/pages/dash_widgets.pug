extends ../layouts/dashboard

append config
  -pageName = 'Widgets'
  -pageUrl = 'dash_widgets'

block content
  .card
    h6.card-header Widgets
    .card-body
      a.btn.btn-primary.col-12(href='dash_add_widget.html')
        i.fa.fa-edit
        |  Add Widget
      br
      br
      table.table.table-border.table-hover
        thead
          tr
            th Title
            th Actions
        tbody
          tr
            td Text Widget
            td
              a.btn.btn-primary.btn-sm(href='?edit-id=1')
                i.fa.fa-edit
                |  Edit
              a.btn.btn-danger.btn-sm(href='?delete-id=1')
                i.fa.fa-trash
                |  Delete


block scripts 
